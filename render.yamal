services:
  - type: web
    name: cfs-live
    env: python
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --timeout 120
    envVars:
      - key: PYTHON_VERSION
        value: 3.12.6
      - key: RESULTS_URL
        value: https://www.courses-sur-sable.fr/live/
      - key: DATA_DIR
        value: /var/data
    disk:
      name: cfs-data
      mountPath: /var/data
      sizeGB: 1
